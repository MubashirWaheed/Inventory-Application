extends layout 
block head 
    link(rel="stylesheet", href="stylesheets/categories.css")
    <script src="https://kit.fontawesome.com/abb39a57a2.js" crossorigin="anonymous"></script>

block content
    div.bar
        div.input-wrapper
            input(type="text" class="search-categories" placeholder="search categories" title='disabled for now' disabled )
            i(class="fas fa-search")
        div 
            a(href="/form" class="add-category btn") Add Category     
    div.main 
        .card  
            img(src="/images/plant3.jpeg" alt="plant")
            h3 Flowering plants
            p This is the cateogry's description.
            a(href="#" class="btn") Add items
        .card  
            img(src="/images/plant2.jpeg" alt="plant")
            h3 Shrubs
            p This is the cateogry's description.
            a(href="#" class="btn") Add items
        .card  
            img(src="/images/plant6.jpeg" alt="plant")
            h3 Fruit plants 
            p This is the cateogry's description.
            a(href="#" class="btn") Add items 
        .card  
            img(src="/images/plant4.jpeg" alt="plant")
            h3 plants 
            a(href="#" class="btn") Add items 
        each item in items 
            .card 
                h3 #{item.name}
                p  #{item.description}
                a(href="#" class="btn") Add items 
